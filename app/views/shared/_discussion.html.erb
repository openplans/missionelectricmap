<% if commentable.comments.count > 0 %>
<h6 class="discussion-header"><%= pluralize commentable.comments.count, t("feature.comment.label") %></h6>
<ul>
  <% for comment in commentable.comments %>
    <li class="clearfix">
      <div class="comment-header">
        <div class="avatar"><%= avatar_for(comment.user) if comment.user.present? %></div>
        <div>
          <% if comment.display_submitter.present? %>
          <strong class="comment-submitter"><%= comment.display_submitter %></strong>
          <% end %>
          <span class="weak comment-date">
            <%= t "feature.when", :time => l(comment.created_at, :format => :just_time), :date => l(comment.created_at, :format => :date_long) %>
          </span> 
        </div>
      </div>
      <div class="comment-body"><%= comment.comment %></div>
    </li>
  <% end %>
</ul>
<% end %>