<div class="feature show">

  <% if admin_signed_in? %>
    <div class="feature-admin">
      <%= render "feature_points/admin.html", :feature_point => feature_point %>     
    </div>
  <% end %>
  
  <div id="left">
    <div class="location_image">
      <%= image_tag feature_point.image.url(:thumb) if feature_point.image.present? %>
    </div>
    
    <div class="support">
      <% if vote = vote_for(feature_point) %>
        <%#= render "votes/delete.html", :supportable => feature_point, :vote => vote %>
      <% else %>
        <div id="vote_link">
          <%= link_to t('feature.vote_action'), new_feature_point_vote_path(feature_point) %>
        </div>
        <%#= render "votes/new.html", :supportable => feature_point %>
      <% end %>
    </div>
  </div>
  
  <div id="center">
    <h2>
      <%= pluralize feature_point.votes.count, Vote.model_name.human -%>
    </h2>
    <h1>
      <%= feature_point.name -%>
    </h1>
    <p>
      <strong><%= feature_point.event_time -%></strong>
    </p>
    <p>
      <strong><%= feature_point.address -%></strong>
    </p>
    <p>
      <%= feature_point.description -%>
    </p>
    <p>
      <%= link_to feature_point.event_link if feature_point.event_link.present? -%>
    </p>
  </div>
  
  <div id="right">
    <div class="discussion">
      <%= render "shared/discussion.html", :commentable => feature_point %>
    </div>
  </div>
</div><!-- end div.feature -->